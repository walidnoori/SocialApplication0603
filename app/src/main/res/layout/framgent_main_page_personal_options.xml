<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="#232D4E"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:text="Button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center">

            <social.application.personalactivities.ResizableButton
                android:background="@drawable/personal_activity_buttons_design"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:id="@+id/personal_live_story_btn"
                android:text="ACtion" />



            <social.application.personalactivities.ResizableButton
                android:background="@drawable/personal_activity_buttons_design"
                android:id="@+id/personal_event_btn"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Event" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <social.application.personalactivities.ResizableButton
                android:id="@+id/personal_text_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@drawable/personal_activity_buttons_design"
                android:text="Text"
                android:textColor="@color/colorPrimaryDark" />


            <social.application.personalactivities.ResizableButton
                android:id="@+id/personal_photo_video_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@drawable/personal_activity_buttons_design"
                android:text="Photo / Video"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
